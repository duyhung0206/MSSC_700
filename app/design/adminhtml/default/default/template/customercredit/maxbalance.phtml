<?php $currency = Mage::app()->getLocale()->currency(Mage::app()->getStore()->getCurrentCurrencyCode())->getSymbol() ?>
<?php $collection = $this->getTopFiveCustomerMaxCreditBalan();
?>

<div class="grid np">
    <table cellspacing="0" style="border:0;" id="topSearchGrid_table">
        <colgroup><col>
            <col width="100">
            <col width="200">
        </colgroup>
        <thead>
            <tr class="headings">
                <th><span class="nobr"><?php echo Mage::helper('customercredit')->__('Customer Name') ?></span></th>
                <th><span class="nobr"><?php echo Mage::helper('customercredit')->__('Credit Balance' . '(' . $currency . ')') ?></span></th>
            </tr>
        </thead>
        <tbody>
            <?php if (count($collection)): ?>
                <?php foreach ($collection as $customer): ?>
                    <tr  class="even pointer">
                        <td class=" "><?php echo $customer['name']; ?></td>
                        <td class=" a-right last"><?php echo Mage::helper('core')->currency($customer['credit_value']) ?></td>
                    </tr>
                <?php endforeach; ?>
            <?php elseif ($this->getEmptyText()): ?>
                <tr>
                    <td class="empty-text <?php echo $this->getEmptyTextClass() ?>" colspan="100"><?php echo $this->getEmptyText() ?></td>
                </tr>
            <?php endif; ?>
        </tbody>
    </table>
</div>
